{
    "id": "wildfly-domain-controller",
    "apiVersion": "v1beta1",
    "kind": "ReplicationController",
    "desiredState": {
      "replicas": 1,
      "replicaSelector": {"name": "wildfly-domain"},
      "podTemplate": {
        "desiredState": {
           "manifest": {
             "version": "v1beta1",
             "id": "wildfly-domain-controller",
             "containers": [{
               "name": "wildfly-domain",
               "image": "rafabene/wildfly-ticketmonster-domain",
               "imagePullPolicy": "PullAlways",
               "ports": [{"containerPort": 9990, "hostPort": 9990}, {"containerPort": 9999, "hostPort": 9999}],
             }]
           }
         },
         "labels": {"name": "wildfly-domain"}
        }},
    "labels": {"name": "wildfly-domain"}
  }