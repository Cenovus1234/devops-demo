{
    "apiVersion": "v1beta1",
    "id": "wildfly-server-rc",
    "kind": "ReplicationController",
    "labels": {
        "name": "wildfly-server"
    },
    "desiredState": {
        "replicas": 2,
        "replicaSelector": {
            "name": "wildfly-server"
        },
        "podTemplate": {
            "labels": {
                "name": "wildfly-server"
            },
            "desiredState": {
                "manifest": {
                    "id": "wildfly-server-rc",
                    "version": "v1beta1",
                    "containers": [
                        {
                            "name": "wildfly-server",
                            "image": "rafabene/wildfly-ticketmonster-server",
                            "imagePullPolicy": "PullAlways",
                            "ports": [
                                {
                                    "containerPort": 8009
                                }
                            ],
                            "command": [
                                "sh",
                                "-c",
                                '/opt/jboss/wildfly/bin/domain.sh -b `hostname --ip-address`  -Djboss.domain.master.address=$WILDFLY_DOMAIN_SERVICE_HOST -Dpostgres.host=$POSTGRES_SERVICE_HOST'
                            ]
                        }
                    ]
                }
            }
        }
    }
}
